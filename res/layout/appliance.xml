<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<RadioGroup android:id="@+id/Select"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_marginLeft="20dp" android:orientation="horizontal">

		<RadioButton android:id="@+id/select" android:layout_width="wrap_content"
			android:text="Select Appliance" android:layout_height="wrap_content" android:checked="true" android:textColor="@color/textColor"></RadioButton>
		<RadioButton android:id="@+id/edit" android:layout_width="wrap_content"
			android:text="Edit Appliance" android:layout_height="wrap_content" android:textColor="@color/textColor"></RadioButton>

	</RadioGroup>


	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:layout_alignParentLeft="true"
			android:text="No appliances were found, please add appliances using the menu"
			android:id="@android:id/empty" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
		<ListView android:dividerHeight="1dp" android:divider="@drawable/grad"
			android:choiceMode="singleChoice" android:addStatesFromChildren="true"
			android:clickable="true" android:id="@android:id/list"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
		</ListView>
	</LinearLayout>
</LinearLayout>
